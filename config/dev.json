{
    "server": {
        "port": 9010,
        "static_files": "/../client/",

        "database": { 
            "datasetCacheLifeTime": 7200000
        },

        "datasets": {
            "watch": ["./dist/server/text_resource.json"],
            "datasetCacheLifeTime": 7200000,
            "folder": "./",
            "translations": "text_resource.json"
        }
    },

    "authentication": [
        {
            "name": "local",
            "enabled": true,
            "consumerKey": "",
            "consumerSecret": ""
        },
        {
            "name": "google",
            "enabled": true,
            "consumerKey": "",
            "consumerSecret": ""
        },
        {
            "name": "facebook",
            "enabled": true,
            "consumerKey": "",
            "consumerSecret": ""
        },
        {
            "name": "twitter",
            "enabled": true,
            "consumerKey": "",
            "consumerSecret": ""
        }
    ],

    "log4js": {
        "level": "INFO",
        "config": {
            "appenders": [
                { 
                    "type": "console"
                },
                {
                    "type": "file", 
                    "filename": "temp/base.log", 
                    "category": "base"
                }
            ]
        }
    }
}