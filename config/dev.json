{
    "server": {
        "port": 9010,
        "staticFiles": "/../client/",
        "dataSizeLimit": "400kb",
        "sessionSecretKey": "secret_session_key",
        "clusters": 1,

        "https": {
            "key": "local.key",
            "cert": "local.crt"
        },

        "database": { 
            "datasetCacheLifeTime": 7200000,
            "username": "cvc",
            "password": "test",
            "url": "mongodb://localhost:27017/cvc"
        },

        "datasets": {
            "watch": ["./dist/server/text_resource.json"],
            "datasetCacheLifeTime": 7200000,
            "folder": "./dist/server/",
            "translations": "text_resource.json"
        }
    },

    "authentication": {
        "local": {
            "enabled": true
        },
        "http": {
            "enabled": true
        },
        "google": {
            "enabled": false,
            "consumerKey": "",
            "consumerSecret": ""
        },
        "facebook": {
            "enabled": false,
            "callbackURL": ""
        },
        "twitter": {
            "enabled": false,
            "consumerKey": "",
            "consumerSecret": "fetch from process.env"
        }
    },

    "log4js": {
        "level": "INFO",
        "config": {
            "appenders": [
                { 
                    "type": "console"
                },
                {
                    "type": "file", 
                    "filename": "temp/base.log", 
                    "category": "base"
                }
            ]
        }
    }
}