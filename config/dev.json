{
    "server": {
        "port": 9010,
        "staticFiles": "/../client/",
        "dataSizeLimit": "400kb",
        "sessionSecretKey": "secret_session_key",
        "clusters": 1,
        "email": {
            "transporter": "",
            "from": ""
        },

        "https": {
            "key": "local.key",
            "cert": "local.crt"
        },

        "database": { 
            "datasetCacheLifeTime": 7200000,
            "username": "cvc",
            "password": "test",
            "url": "mongodb://localhost:27017/cvc"
        },

        "datasets": {
            "watch": ["./dist/server/text_resource.json"],
            "watchEnabled": true,
            "datasetCacheLifeTime": 7200000,
            "folder": "./dist/server/",

            "translations": "text_resource.json",
            "countries": "countries.json",
            "cities": "",
            "schools": "",
            "skills": ""
        }
    },

    "redis": {
        "port": 6379
    },

    "authentication": {
        "local": {
            "name": "LOCAL",
            "enabled": false
        },
        "http": {
            "name": "HTTP",
            "enabled": false
        },
        "google": {
            "name": "GOOGLE",
            "enabled": true,
            "consumerKey": "",
            "consumerSecret": ""
        },
        "facebook": {
            "name": "FACEBOOK",
            "enabled": true,
            "callbackURL": "https://localhost:9010/auth/facebook/callback"
        },
        "twitter": {
            "name": "TWITTER",
            "enabled": true,
            "consumerKey": "",
            "consumerSecret": "fetch from process.env"
        },
        "linkedin": {
            "name": "LINKEDIN",
            "enabled": true,
            "consumerKey": "",
            "callbackURL": ""
        }
    },

    "log4js": {
        "level": "INFO",
        "config": {
            "appenders": [
                { 
                    "type": "console"
                },
                {
                    "type": "file", 
                    "filename": "temp/base.log", 
                    "category": "base"
                },
                {
                    "type": "file", 
                    "filename": "temp/batch.log", 
                    "category": "batch"
                }
            ]
        }
    }
}