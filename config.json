{
    "server": {
        "port": 9010,
        "swagger": {
            "enabled": false,
            "config": {
                "apiVersion": "1.0",
                "swaggerVersion": "1.0",
                "swaggerURL": "/swagger",
                "swaggerJSON": "/api-docs.json",
                "swaggerUI": "./public/swagger/",
                "basePath": "http://localhost:9010",
                "info": {
                "title": "CV121 API",
                    "description": "CV121 endpoints"
                },
                "apis": ["./dist/server/api.js", "./dist/server/api.yml"]
            }
        },
        "staticFiles": "/../client/",
        "dataSizeLimit": "400kb",
        "sessionSecretKey": "secret_session_key",
        "clusters": 1,
        "defaultProfilePicture": "anonymous-user-profile.jpg",
        "email": {
            "transporter": "",
            "from": ""
        },

        "https": {
            "key": "local.key",
            "cert": "local.crt"
        },

        "database": { 
            "datasetCacheLifeTime": 7200000,
            "username": "cvc",
            "password": "test",
            "url": "mongodb://localhost:27017/cvc"
        },

        "datasets": {
            "watch": [
                "./dist/server/countries.json",
                "./dist/server/domain_experience.json",
                "./dist/server/education_faculty.json",
                "./dist/server/education_level.json",
                "./dist/server/language_level.json",
                "./dist/server/languages.json",
                "./dist/server/professions.json",
                "./dist/server/specific_experience.json",
                "./dist/server/roles.json",
                "./dist/server/industry.json",
                "./dist/server/feature_toggle.json",
                "./dist/server/competency_hierarchy.json",
                "./dist/server/education_high_school_major.json",
                "./dist/server/currencies.json",
                "./dist/server/text_resource.json",
                "./dist/server/company_forms.json",
                "./dist/server/person_forms.json"
            ],
            "watchEnabled": true,
            "datasetCacheLifeTime": 7200000
        },

        "uploads": {
            "properties": {
                "dest": "./temp/uploads/",
                "limits": {
                    "fieldNameSize": 100,
                    "fieldSize": 1048576,
                    "fileSize": 1048576
                }
            },
            "initialStorage": 1048576,
            "src": "../../temp/uploads/"
        }
    },

    "redis": {
        "port": 6379
    },

    "authentication": {
        "local": {
            "code": "a",
            "name": "LOCAL",
            "enabled": true
        },
        "http": {
            "code": "b",
            "name": "HTTP",
            "enabled": false
        },
        "google": {
            "code": "c",
            "name": "GOOGLE",
            "enabled": false,
            "consumerKey": "",
            "consumerSecret": "",
            "callbackURL": "https://localhost:9010/auth/google/callback",
            "profileFields": []
        },
        "facebook": {
            "code": "d",
            "name": "FACEBOOK",
            "enabled": true,
            "callbackURL": "https://localhost:9010/auth/facebook/callback",
            "profileFields": [
                "id", 
                "displayName", 
                "name", 
                "birthday", 
                "emails", 
                "picture.type(large)",
                "hometown",
                "languages",
                "locale",
                "location",
                "name_format",
                "work"
            ]
        },
        "twitter": {
            "code": "e",
            "name": "TWITTER",
            "enabled": false,
            "consumerKey": "",
            "consumerSecret": "fetch from process.env"
        },
        "linkedin": {
            "code": "f",
            "name": "LINKEDIN",
            "enabled": false,
            "consumerKey": "",
            "callbackURL": ""
        }
    },

    "log4js": {
        "level": "INFO",
        "config": {
            "appenders": [
                { 
                    "type": "console"
                },
                {
                    "type": "file", 
                    "filename": "temp/base.log", 
                    "category": "base"
                },
                {
                    "type": "file", 
                    "filename": "temp/batch.log", 
                    "category": "batch"
                }
            ]
        }
    }
}